{
    "name": "iett-panel",
    "private": true,
    "version": "1.0.1",
    "main": "electron/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/Source-Dew/IETT_Panel.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && electron-builder",
        "release": "npm run build && electron-builder --publish always"
    },
    "dependencies": {
        "electron": "40.0.0",
        "electron-log": "^5.3.0",
        "electron-updater": "^6.6.2",
        "lucide-react": "^0.555.0",
        "python-shell": "^5.0.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.22",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron-builder": "^26.0.12",
        "electron-packager": "^17.1.2",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "vite": "^7.2.4",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.iett.hikvision.panel",
        "productName": "IETT Hıkvısıon Panel",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "extraResources": [
            {
                "from": "python/dist/main.exe",
                "to": "python/main.exe"
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "public/icon.png",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "Source-Dew",
                "repo": "IETT_Panel"
            }
        ]
    }
}
